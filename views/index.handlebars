<div class="container">
    <p class="burger-icon">🍔</p>

    <h1 class="mb-4">Burgers!</h1>

<div class="row">
    <h2>Add a Burger</h2>
    <form class="burgersBeingCreated">

      <div class="form-group">
        <label id="ca">Burger Name:</label>
        <input type="text" id ="burgerName" name="name">
      </div>
 
    <div class="form-group">
    <button class ="submitBtn"type="submit">Make Burger!</button>
  </form>
</div>


<div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                </div>
                <h2>Uneaten Burgers</h2>
                  <ul>
                    {{#each burgers}}
                      {{#unless devoured}}
                        <p>{{burger_name}}</p> 
                        <button data-id= {{id}} class= "devourBtn">Devour</button>
                      {{/unless}}
                    {{/each}}
                  </ul>
            </div>
        </div>

<div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h5>Devoured Burgers</h5>
                </div>
                <ul>
                  {{#each burgers}}
                    {{#if devoured}}
                      <p>{{burger_name}}</p>
                    {{/if}}
                  {{/each}}
                </ul>
            </div>
        </div>

</div>
